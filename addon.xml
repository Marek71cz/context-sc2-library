<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.sc2.library" name="SC 2.0 - add to library" version="0.1.0" provider-name="Marek">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
    <extension point="kodi.context.item" library="addon.py">
        <item>
            <label>30100</label>
            <visible>String.StartsWith(ListItem.path,plugin://plugin.video.stream-cinema-2/)+[String.IsEqual(ListItem.dbtype,tvshow)|String.IsEqual(ListItem.dbtype,movie)]</visible>
            <!--
            <visible>String.StartsWith(ListItem.path,plugin://plugin.video.stream-cinema-2/)+[String.IsEqual(ListItem.dbtype,movie)]</visible>
            -->
        </item>
    </extension>
